<main id="main">
    <div class="title">
        <p><%= @title %></p>
    </div>

    <div class="separation_line">
        <hr>
    </div>
    
    <%= form_for @trip do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <br>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <br>
        <%= f.label :price %>
        <%= f.number_field :price, step: 0.01 %>
        <br>
        <%= f.label :country %>
        <%= f.text_field :country %>
        <br>
        <%= f.label :region %>
        <%= f.text_field :region %>
        <br>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <br>
        <%= f.submit "Sukurti" %>
    <% end %>
</main>